<a href="/">
    <img src="/images/{{ owner.avatar }}" class="bio-photo rounded-circle" alt="{{ owner.name }} bio photo">
</a>

<h3 itemprop="name">
    <a href="/">{{ owner.name }}</a>
</h3>

<p>{{ owner.bio }}</p>

<ul>
    {% if owner.email %}
        <li>
            <a href="mailto:{{ owner.email }}" class="author-social" target="_blank">
                <i class="fa fa-fw fa-envelope-square"></i> Email
            </a>
        </li>
    {% endif %}

    {% if owner.twitter %}
        <li>
            <a href="http://twitter.com/{{ owner.twitter }}" class="author-social" target="_blank">
                <i class="fa fa-fw fa-twitter-square"></i> Twitter
            </a>
        </li>
    {% endif %}

    {% if owner.facebook %}
        <li>
            <a href="http://facebook.com/{{ owner.facebook }}" class="author-social" target="_blank">
        <i class="fa fa-fw fa-facebook-square"></i> Facebook
            </a>
        </li>
    {% endif %}

    {% if owner.github %}
        <li>
            <a href="http://github.com/{{ owner.github }}" class="author-social" target="_blank">
        <i class="fa fa-fw fa-github"></i> Github
            </a>
        </li>
    {% endif %}

    {% if owner.stackoverflow %}
        <li>
            <a href="http://stackoverflow.com/users/{{ owner.stackoverflow }}" class="author-social" target="_blank">
                <i class="fa fa-fw fa-stack-overflow"></i> Stackoverflow
            </a>
        </li>
    {% endif %}
</ul>
