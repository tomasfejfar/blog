<a href="/">
    <img src="/images/{{ owner.avatar }}" class="bio-photo" alt="{{ owner.name }} bio photo">
</a>

<h3 itemprop="name">
    <a href="/">{{ owner.name }}</a>
</h3>

<p>{{ owner.bio }}</p>

{% if owner.email %}<a href="mailto:{{ owner.email }}" class="author-social" target="_blank">
    <i class="fa fa-fw fa-envelope-square"></i> Email</a>
{% endif %}

{% if owner.twitter %}<a href="http://twitter.com/{{ owner.twitter }}" class="author-social" target="_blank">
    <i class="fa fa-fw fa-twitter-square"></i> Twitter</a>
{% endif %}

{% if owner.facebook %}<a href="http://facebook.com/{{ owner.facebook }}" class="author-social" target="_blank">
    <i class="fa fa-fw fa-facebook-square"></i> Facebook</a>
{% endif %}

{% if owner.github %}<a href="http://github.com/{{ owner.github }}" class="author-social" target="_blank">
    <i class="fa fa-fw fa-github"></i> Github</a>
{% endif %}

{% if owner.stackoverflow %}<a href="http://stackoverflow.com/users/{{ owner.stackoverflow }}" class="author-social" target="_blank">
    <i class="fa fa-fw fa-stack-overflow"></i> Stackoverflow</a>
{% endif %}
