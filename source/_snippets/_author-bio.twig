<div itemscope itemtype="http://schema.org/Person">

  <a href="/">
{% if owner.avatar contains 'http' %}
	<img src="{{ owner.avatar }}" class="bio-photo" alt="{{ owner.name }} bio photo">
{% else %}
	<img src="/images/{{ owner.avatar }}" class="bio-photo" alt="{{ owner.name }} bio photo">
{% endif %}
  </a>

  <h3 itemprop="name"><a href="/">{{ owner.name }}</a></h3>
  <p>{{ owner.bio }}</p>
  {% if owner.email %}<a href="mailto:{{ owner.email }}" class="author-social" target="_blank"><i class="fa fa-fw fa-envelope-square"></i> Email</a>{% endif %}
  {% if owner.twitter %}<a href="http://twitter.com/{{ owner.twitter }}" class="author-social" target="_blank"><i class="fa fa-fw fa-twitter-square"></i> Twitter</a>{% endif %}
  {% if owner.facebook %}<a href="http://facebook.com/{{ owner.facebook }}" class="author-social" target="_blank"><i class="fa fa-fw fa-facebook-square"></i> Facebook</a>{% endif %}
  {% if owner.google.plus %}<a href="http://plus.google.com/+{{ owner.google.plus }}" class="author-social" target="_blank"><i class="fa fa-fw fa-google-plus-square"></i> Google+</a>{% endif %}
  {% if owner.linkedin %}<a href="http://linkedin.com/in/{{ owner.linkedin }}" class="author-social" target="_blank"><i class="fa fa-fw fa-linkedin-square"></i> LinkedIn</a>{% endif %}
  {% if owner.xing %}<a href="http://www.xing.com/profile/{{ owner.xing }}" class="author-social" target="_blank"><i class="fa fa-fw fa-xing-square"></i> XING</a>{% endif %}
  {% if owner.instagram %}<a href="http://instagram.com/{{ owner.instagram }}" class="author-social" target="_blank"><i class="fa fa-fw fa-instagram"></i> Instagram</a>{% endif %}
  {% if owner.tumblr %}<a href="http://{{ owner.tumblr }}.tumblr.com" class="author-social" target="_blank"><i class="fa fa-fw fa-tumblr-square"></i> Tumblr</a>{% endif %}
  {% if owner.github %}<a href="http://github.com/{{ owner.github }}" class="author-social" target="_blank"><i class="fa fa-fw fa-github"></i> Github</a>{% endif %}
  {% if owner.stackoverflow %}<a href="http://stackoverflow.com/users/{{ owner.stackoverflow }}" class="author-social" target="_blank"><i class="fa fa-fw fa-stack-overflow"></i> Stackoverflow</a>{% endif %}
  {% if owner.lastfm %}<a href="http://lastfm.com/user/{{ owner.lastfm }}" class="author-social" target="_blank"><i class="fa fa-fw fa-music"></i> Last.fm</a>{% endif %}
  {% if owner.dribbble %}<a href="http://dribbble.com/{{ owner.dribbble }}" class="author-social" target="_blank"><i class="fa fa-fw fa-dribbble"></i> Dribbble</a>{% endif %}
  {% if owner.pinterest %}<a href="http://www.pinterest.com/{{ owner.pinterest }}" class="author-social" target="_blank"><i class="fa fa-fw fa-pinterest"></i> Pinterest</a>{% endif %}
  {% if owner.foursquare %}<a href="http://foursquare.com/{{ owner.foursquare }}" class="author-social" target="_blank"><i class="fa fa-fw fa-foursquare"></i> Foursquare</a>{% endif %}
  {% if owner.steam %}<a href="http://steamcommunity.com/id/{{ owner.steam }}" class="author-social" target="_blank"><i class="fa fa-fw fa-steam-square"></i> Steam</a>{% endif %}
  {% if owner.youtube %}<a href="https://youtube.com/user/{{ owner.youtube }}" class="author-social" target="_blank"><i class="fa fa-fw fa-youtube-square"></i> Youtube</a>{% endif %}
  {% if owner.soundcloud %}<a href="http://soundcloud.com/{{ owner.soundcloud }}" class="author-social" target="_blank"><i class="fa fa-fw fa-soundcloud"></i> Soundcloud</a>{% endif %}
  {% if owner.weibo %}<a href="http://www.weibo.com/{{ owner.weibo }}" class="author-social" target="_blank"><i class="fa fa-fw fa-weibo"></i> Weibo</a>{% endif %}
  {% if owner.flickr %}<a href="http://www.flickr.com/{{ owner.flickr }}" class="author-social" target="_blank"><i class="fa fa-fw fa-flickr"></i> Flickr</a>{% endif %}
  {% if owner.codepen %}<a href="http://codepen.io/{{ owner.codepen }}" class="author-social" target="_blank"><i class="fa fa-fw fa-codepen"></i> CodePen</a>{% endif %}
</div>
