---
outputPath: sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ site_url }}/</loc>
        <lastmod>{{ 'now'|date('c') }}</lastmod>
    </url>
{% for post in posts %}
    <url>
        <loc>{{ site_url }}/{{ post|link }}/</loc>
        <lastmod>{{ post.date|date('c')}}</lastmod>
    </url>
{% endfor %}
</urlset>
