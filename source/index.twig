layout: "_layouts/default.twig"
title: "Blog"
---

<h2>{% if title %}{{ title }} &#8211; {% endif %}{{ main_title }}</h2>

{% for post in posts %}
    {% if loop.index <= 5 %}
        <article>
            <h2><a href="/{{ post.relativeUrl }}/" title="{{ post.title }}">{{ post.title }}</a></h2>
            <p>{{ post.excerpt|striphtml|truncate(160) }}</p>
        </article>
    {% endif %}
{% endfor %}

<a href="/posts/" class="btn btn-warning mt-3">See all posts</a>
