layout: "_layouts/default.twig"
---

<h3>{% if title %}{{ title }} &#8211; {% endif %}{{ title }}</h3>

{% for post in posts %}
    {% if loop.index <= 5 %}
        <article>
            {% if post.link %}
                <h2 class="link-post"><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a> <a href="{{ post.link }}" target="_blank" title="{{ post.title }}"><i class="fa fa-link"></i></a></h2>
            {% else %}
                <h2><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a></h2>
                <p>{{ post.excerpt|striphtml|truncate(160) }}</p>
            {% endif %}
        </article>
    {% endif %}
{% endfor %}

<a href="/posts/" class="button">See all posts</a>
