---
outputPath: "feed.xml"
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
<title type="text">{{ main_title }}</title>
<generator uri="https://github.com/jekyll/jekyll">Jekyll</generator>
<link rel="self" type="application/atom+xml" href="{{ public_url }}/feed.xml" />
<link rel="alternate" type="text/html" href="{{ public_url }}/" />
<updated>{{ "today"|date_to_xmlschema }}</updated>
<id>{{ public_url }}/</id>
<author>
  <name>{{ owner.name }}</name>
  <uri>{{ public_url }}/</uri>
  {% if owner.email %}<email>{{ owner.email }}</email>{% endif %}
</author>

{% set author = owner %}

  {% for post in posts %}
    {% if loop.index <= 20 %}
      <entry>
        <title type="html"><![CDATA[{{ post.title }}]]></title>
        <link rel="alternate" type="text/html" href="{{ post.url }}" />
        <id>{{ public_url }}/{{ post.relativeUrl }}</id>
        <published>{{ post.date|date_to_xmlschema }}</published>
        <author>
          <name>{{ owner.name }}</name>
          <uri></uri>
          {% if owner.email %}<email>{{ owner.email }}</email>{% endif %}
        </author>
        <content type="html">
          {{ post.rawContent }}
          &lt;p&gt;&lt;a href=&quot;{{ post.url }}&quot;&gt;{{ post.title|xml_escape }}&lt;/a&gt; was originally published by {{ owner.name }} at &lt;a href=&quot;&quot;&gt;{{ title }}&lt;/a&gt; on {{ post.date|date("%B %d, %Y") }}.&lt;/p&gt;
        </content>
      </entry>
    {% endif %}
  {% endfor %}
</feed>
