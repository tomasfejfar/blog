<head>
{% include _snippets/_head.twig %}
  <style>
    .back-to-home {
      display: none;
      font-size: 110%;
    }

    h1 {
      line-height: 1.3em;
    }

    @media only screen and (max-width: 37.5em) {
      .back-to-home {
        display: inline-block;
      }
    }
  </style>
</head>

<body class="post-index">

{% include _snippets/_browser-upgrade.twig %}

{% include _snippets/_navigation.twig %}

<div id="main" role="main">
  <div class="article-author-side">
    {% include _snippets/_author-bio.twig %}
  </div>
  <div id="index">
    <h1><a class="back-to-home" title="Back to homepage" href="/">ðŸ”™</a>{{ title }}</h1>
    {% capture written_year %}'None'{% endcapture %}
    {% for post in posts %}
      {% capture year %}{{ post.date | date: '%Y' }}{% endcapture %}
      {% if year != written_year %}
        <h3>{{ year }}</h3>
        {% capture written_year %}{{ year }}{% endcapture %}
      {% endif %}
      <article>
        {% if post.link %}
          <h2 class="link-post"><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a> <a href="{{ post.link }}" target="_blank" title="{{ post.title }}"><i class="fa fa-link"></i></a></h2>
        {% else %}
          <h2><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a></h2>
          <p>{{ post.excerpt | striphtml | truncate: 160 }}</p>
        {% endif %}
      </article>
    {% endfor %}
  </div><!-- /#index -->
</div><!-- /#main -->

<div class="footer-wrap">
  <footer>
    {% include _snippets/_footer.twig %}
  </footer>
</div><!-- /.footer-wrap -->

{% include _snippets/_scripts.twig %}

</body>
</html>
