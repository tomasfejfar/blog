<!DOCTYPE html>
    <!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
    <!--[if (IE 7)&!(IEMobile)]><html class="no-js lt-ie9 lt-ie8" lang="en"><![endif]-->
    <!--[if (IE 8)&!(IEMobile)]><html class="no-js lt-ie9" lang="en"><![endif]-->
    <!--[if gt IE 8]><!--> <html class="no-js" lang="en"><!--<![endif]-->
    <head>
      {% include '_snippets/head.twig' %}
    </head>

    <body>
        <div class="container-fluid">
            <div class="row">
                <article class="col-md-9 order-md-2">
                    <h1><a class="back-to-home" title="Back to homepage" href="/">ðŸ”™</a>
                      {{ title }}
                    </h1>

                  <div>
                    {{ post.content|raw }}
                    <hr />
                    {% include "_snippets/footer-banner.twig" %}
                    <hr />
                      {% include '_snippets/social-share.twig' %}
                      <p class="byline text-muted">
                          <strong>{{ title }}</strong> was published on <time datetime="{{ date|date_to_xmlschema }}">{{ date|date( "%B %d, %Y") }}</time>{% if modified %} and last modified on <time datetime="{{ modified|date("%Y-%m-%d") }}">{{ modified|date( "%B %d, %Y") }}</time>{% endif %}.
                      </p>
                  </div>
                {% if owner.disqusShortname %}
                  <section id="disqus_thread"></section>
                {% endif %}
                </article>
                <div class="col-md-3 order-md-1">
                    {% include '_snippets/author-bio.twig' %}
                </div>
          </div>
        </div>

        <div class="container mt-5 text-center">
            <footer>
                {% include '_snippets/footer.twig' %}
            </footer>
        </div>

        {% include '_snippets/scripts.twig' %}
    </body>
</html>
