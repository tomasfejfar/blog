<head>
  {% include '_snippets/_head.twig' %}
</head>

<body class="post">
    <div id="main" role="main" class="container">
        <div class="row">
            <div class="col-3">
              {% include '_snippets/_author-bio.twig' %}
            </div>
            <article class="post col-9">
              <div class="headline-wrap">
                <h1><a class="back-to-home" title="Back to homepage" href="/">ðŸ”™</a>
                  <a href="/{{ post.relativeUrl }}/" rel="bookmark" title="{{ title }}">{{ title }}</a>
                </h1>
              </div>

              <div>
                {{ post.content|raw }}
                <hr />
                {% include "_snippets/_footer-banner.twig" %}
                <hr />
                <footer role="contentinfo">
                  {% include '_snippets/_social-share.twig' %}
                  <p class="byline text-muted">
                      <strong>{{ title }}</strong> was published on <time datetime="{{ date|date_to_xmlschema }}">{{ date|date( "%B %d, %Y") }}</time>{% if modified %} and last modified on <time datetime="{{ modified|date("%Y-%m-%d") }}">{{ modified|date( "%B %d, %Y") }}</time>{% endif %}.
                  </p>
                </footer>
              </div>
            {% if owner.disqus-shortname %}
              <section id="disqus_thread"></section>
            {% endif %}
            </article>
      </div>
    </div>


    <div class="footer-wrap">
      {% if related_posts.size > 0 %}
      <div class="related-articles">
      <h4>You might also enjoy <small class="pull-right">(<a href="/posts/">View all posts</a>)</small></h4>
        <ul>
        {% for post in related_posts %}
          {% if loop.index <= 3 %}
              <li><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a></li>
          {% endif %}
        {% endfor %}
        </ul>
        <hr>
      </div>
      {% endif %}
      <footer>
        {% include '_snippets/_footer.twig' %}
      </footer>
    </div>

    {% include '_snippets/_scripts.twig' %}
</body>
</html>
