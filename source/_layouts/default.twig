<head>
    {% include '_snippets/_head.twig' %}

    <style>
        .image-wrap {
            {% if 'http' in image.feature %}
                background-image: url('{{ image.feature }}');
            {% else %}
                background-image: url('/images/{{ image.feature }}');
            {% endif %}
        }
    </style>
</head>

<body class="home">
    <div id="main" role="main" class="container">
        <div class="article-author-side">
            {% include '_snippets/_author-bio.twig' %}
        </div>
        <div id="index">
            {% block content %}{% endblock %}
        </div>
    </div>

    <div class="footer-wrap container">
        <footer>
            {% include '_snippets/_footer.twig' %}
        </footer>
    </div>

    {% include '_snippets/_scripts.twig' %}

    </body>
</html>
